<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".debug.activity.DebugActivity">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:showDividers="middle"
            android:divider="@drawable/divider_8dp"
            android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:id="@+id/restart_app"
                android:textColor="@android:color/white"
                android:text="@string/restart_app"/>

        <com.google.android.material.button.MaterialButton
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:id="@+id/start_postmortem_activity"
                android:textColor="@android:color/white"
                android:text="Postmortem Activity"/>

        <com.google.android.material.button.MaterialButton
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:id="@+id/crash_app"
                android:textColor="@android:color/white"
                android:text="Simulate a crash"/>

        <com.google.android.material.button.MaterialButton
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:id="@+id/ime_picker"
                android:textColor="@android:color/white"
                android:text="Show IME Picker"/>

        <com.google.android.material.button.MaterialButton
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/start_network_monitor"
                android:textColor="@android:color/white"
                android:text="Start Network Monitor Service"/>

        <com.google.android.material.button.MaterialButton
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stop_network_monitor"
                android:textColor="@android:color/white"
                android:text="Stop Network Monitor Service"/>

        <TextView
                android:id="@+id/markdown_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>